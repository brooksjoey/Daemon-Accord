# Database
DATABASE_URL=postgresql://user:password@postgres/browser_automation
REDIS_URL=redis://redis:6379

# Storage
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=artifacts
S3_REGION=us-east-1

# Security
SECRET_KEY=change-this-in-production-with-secure-random-string
JWT_SECRET=change-this-too-in-production
ENCRYPTION_KEY=another-secure-key-for-encryption

# Application
LOG_LEVEL=INFO
MAX_CONCURRENT_JOBS=50
BROWSER_POOL_SIZE=10
DEFAULT_TIMEOUT=300

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
METRICS_RETENTION_DAYS=7
HEALTH_CHECK_INTERVAL=30

# Web
ALLOWED_ORIGINS=*
CORS_ENABLED=true
